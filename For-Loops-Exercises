#include <iostream>
using namespace std;
int main()
{
	for (int i = 1; i <= 7; i++) 
		for (int j = i; j <= 7; j++)
		{
			cout << "*";
		}
		cout << endl;
}



include <iostream>
using namespace std;
int main()
{

	for (int i = 1; i <= 5; i++)
		for (int j = 1; j <= i; j++)
		{
			cout << "*";
		}
	cout << endl;
}




#include <iostream>
using namespace std;
int main()
{

	for (int i = 1; i <= 5; i++)
		for (int j = 1; j <= i; j++)
		{
			cout << "*";
		}
	cout << endl;


	for (int i = 1; i <= 5; i++) 
		for (int j = i; j <= 5; j++)
		{
			cout << "*";
		}
		cout << endl;
}
