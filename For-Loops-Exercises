#include <iostream>
using namespace std;
int main()
{
	for (int i = 1; i <= 7; i++) 
		for (int j = i; j <= 7; j++)
		{
			cout << "*";
		}
		cout << endl;
}



include <iostream>
using namespace std;
int main()
{

	for (int i = 1; i <= 5; i++)
		for (int j = 1; j <= i; j++)
		{
			cout << "*";
		}
	cout << endl;
}




#include <iostream>
using namespace std;
int main()
{

	for (int i = 1; i <= 5; i++)
		for (int j = 1; j <= i; j++)
		{
			cout << "*";
		}
	cout << endl;


	for (int i = 1; i <= 5; i++) 
		for (int j = i; j <= 5; j++)
		{
			cout << "*";
		}
		cout << endl;
}



#include <iostream>
using namespace std;
int main()
{
	int r;

	cout << "Write a number to get the cube" << endl;
	cin >> r;
	
	for (int x = 1; x <= r; x++)
	{
		cout << "\nNumber is " << x << " the cube is ";

		int y = x;
		y = y * y * y;
		cout << y;
	}
	return 0;
}



#include <iostream>
using namespace std;
int main()
{
	int sum = 0;
	for (int x = 100; x <= 200; x++)
	{
		if (x % 9 == 0)

		{
			cout << "\nNumber is " << x << endl;

			sum = sum + x;

		}

	}
	cout << "The sum is " << sum << endl;

	return 0;
}
